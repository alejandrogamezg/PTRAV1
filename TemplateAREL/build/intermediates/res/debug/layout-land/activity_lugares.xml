<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="549dp"
        android:layout_height="124dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Lugares Disponibles"
        android:id="@+id/txtTituloLugares"
        android:textSize="50dp"
        android:background="#fff"
        android:textColor="#000000"
        android:textAlignment="center"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentStart="true"
        android:background="#fff"
        android:layout_below="@+id/txtTituloLugares">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:background="#fff"
            android:layout_below="@+id/txtTituloLugares"
            android:layout_alignParentStart="true">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imgBandera"
                        android:layout_weight="0.30"
                        android:src="@drawable/bandera"
                        android:background="#fff"
                        android:layout_below="@+id/txtTituloLugares"
                        android:layout_toStartOf="@+id/imgRenacimiento"
                        android:layout_column="0" />

                    <ImageButton
                        android:layout_width="300dp"
                        android:layout_height="400dp"
                        android:id="@+id/imgRenacimiento"
                        android:layout_weight="0.30"
                        android:src="@drawable/renacimiento"
                        android:layout_alignParentBottom="true"
                        android:layout_toEndOf="@+id/txtTituloLugares" />

                    <ImageButton
                        android:layout_width="300dp"
                        android:layout_height="400dp"
                        android:id="@+id/imgPescador"
                        android:layout_weight="0.30"
                        android:src="@drawable/pescador"
                        android:background="#fff"
                        android:layout_alignParentBottom="true"
                        android:layout_toEndOf="@+id/imgMestizaje" />

                    <ImageButton
                        android:layout_width="300dp"
                        android:layout_height="400dp"
                        android:id="@+id/imgMestizaje"
                        android:layout_weight="0.30"
                        android:src="@drawable/meztizaje"
                        android:background="#fff"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButton"
                        android:layout_weight="0.30"
                        android:src="@drawable/bandera"
                        android:background="#fff"
                        android:layout_column="5"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButton2"
                        android:layout_weight="0.30"
                        android:src="@drawable/bandera"
                        android:background="#fff"
                        android:layout_column="5"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButton3"
                        android:layout_weight="0.30"
                        android:src="@drawable/bandera"
                        android:background="#fff"
                        android:layout_column="5"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButton4"
                        android:layout_weight="0.30"
                        android:src="@drawable/bandera"
                        android:background="#fff"
                        android:layout_column="5"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />
                </TableRow>

            </TableLayout>

        </RelativeLayout>
    </HorizontalScrollView>

