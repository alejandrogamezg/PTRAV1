<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/linearLayout2"
        android:background="#fff">

        <TextView
            android:layout_width="549dp"
            android:layout_height="124dp"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Lugares Disponibles"
            android:id="@+id/txtTituloLugares"
            android:textSize="50dp"
            android:background="#fff"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout2">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:weightSum="1"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout2"
            android:background="#fff">

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:id="@+id/imgMestizaje"
                android:layout_weight="0.30"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="55dp"
                android:src="@drawable/meztizaje"
                android:layout_alignBottom="@+id/imgBandera"
                android:background="#fff" />

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:id="@+id/imgBandera"
                android:layout_weight="0.30"
                android:src="@drawable/bandera"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/imgMestizaje"
                android:layout_marginStart="72dp"
                android:background="#fff" />

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:id="@+id/imgPescador"
                android:layout_weight="0.30"
                android:layout_below="@+id/imgMestizaje"
                android:layout_alignStart="@+id/imgMestizaje"
                android:layout_marginTop="44dp"
                android:src="@drawable/pescador"
                android:background="#fff" />

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:id="@+id/imgRenacimiento"
                android:layout_weight="0.30"
                android:layout_alignTop="@+id/imgPescador"
                android:layout_alignStart="@+id/imgBandera"
                android:src="@drawable/renacimiento" />

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:id="@+id/imageButton6"
                android:layout_weight="0.30"
                android:layout_marginTop="70dp"
                android:layout_below="@+id/imgPescador"
                android:layout_alignStart="@+id/imgPescador" />

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:id="@+id/imageButton7"
                android:layout_weight="0.30"
                android:layout_alignTop="@+id/imageButton6"
                android:layout_alignStart="@+id/imgRenacimiento" />

            <ImageButton
                android:layout_width="300dp"
                android:layout_height="400dp"
                android:id="@+id/imageButton8"
                android:layout_weight="0.30"
                android:layout_alignTop="@+id/imageButton6"
                android:layout_alignStart="@+id/imgRenacimiento" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>